\ProvidesPackage{beamercolorthemecls}

\xdefinecolor{darkblue}{RGB}{0,0,103}
\xdefinecolor{lightblue}{RGB}{154,204,255}
\xdefinecolor{grey}{RGB}{151,151,151}

\mode<presentation>

\setbeamercolor{normal text}{fg=grey,bg=black}
\setbeamercolor{example text}{fg=lightblue,bg=black}
\setbeamercolor{alerted text}{fg=white,bg=black}

\setbeamercolor{structure}{fg=white,bg=darkblue}

\setbeamercolor{titlelike}{fg=white,bg=darkblue}
\setbeamercolor{frametitle}{fg=white,bg=darkblue}

\setbeamercolor{author}{fg=white}

\setbeamercolor{section number projected}{fg=white,bg=darkblue}

\setbeamercolor*{palette sidebar primary}{fg=grey,bg=darkblue}
\setbeamercolor*{palette sidebar secondary}{fg=grey,bg=lightblue}
\setbeamercolor*{palette sidebar tertiary}{fg=grey,bg=lightblue}
\setbeamercolor*{palette sidebar quaternary}{fg=black,bg=lightblue}

\setbeamercolor{button}{bg=darkblue,fg=lightblue}
\setbeamercolor{enumerate item}{bg=darkblue,fg=lightblue}

\setbeamercolor{itemize item}{bg=darkblue,fg=lightblue}
\setbeamercolor{item}{bg=darkblue,fg=lightblue}

\mode
<all>
